<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <div class="container">
            <%if (errorMessage != "") { %>
                <div class="mt-4 mx-auto w-50 alert alert-danger text-center" role="alert"><%= errorMessage %></div>
            <% } %>
            <form class="my-4 w-25 mx-auto" action="login" method="POST">

                <label for="email">Email</label>
                <input 
                    class="form-control <%= allErrors.find(e => e.param === 'email') ? 'invalid' : '' %>" 
                    type="email" 
                    name="email" 
                    id="email" 
                    value="<%= email %>">
            

                <label for="password">Password</label>
                <input 
                    class="form-control <%= allErrors.find(e => e.param === 'password') ? 'invalid' : '' %>" 
                    type="password" 
                    name="password" 
                    id="password" >
            
                <input type="hidden" value="<%= token %>" name="_csrf">
                <button class="mt-3 btn btn-primary" type="submit">LogIn</button>
            </form>
            <div class="text-center">
                <a href="/reset">Reset Password</a>
            </div>
        </div>
    </main>
<%- include('../includes/end.ejs') %>